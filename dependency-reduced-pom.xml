<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.files</groupId>
  <artifactId>Phasmo-Challenge-Generator</artifactId>
  <version>1.5</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.13.0</version>
        <configuration>
          <release>22</release>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <includes>
                  <include>com.googlecode.json-simple:json-simple</include>
                </includes>
              </artifactSet>
              <transformers>
                <transformer>
                  <mainClass>com.files.ChallengeRad</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.akathist.maven.plugins.launch4j</groupId>
        <artifactId>launch4j-maven-plugin</artifactId>
        <version>2.5.1</version>
        <executions>
          <execution>
            <id>l4j-cl</id>
            <phase>package</phase>
            <goals>
              <goal>launch4j</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <dontWrapJar>false</dontWrapJar>
          <headerType>gui</headerType>
          <jar>target/Phasmo-Challenge-Generator-1.5.jar</jar>
          <outfile>application/PhasmoChallengeGenerator.exe</outfile>
          <chdir>.</chdir>
          <priority>normal</priority>
          <stayAlive>true</stayAlive>
          <restartOnCrash>false</restartOnCrash>
          <icon>src/main/resources/icon.ico</icon>
          <jre>
            <path>%JAVA_HOME%;%PATH%</path>
            <requiresJdk>true</requiresJdk>
            <requires64Bit>false</requires64Bit>
            <minVersion>1.8</minVersion>
            <maxVersion />
          </jre>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
